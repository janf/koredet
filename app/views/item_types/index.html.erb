<p id="notice"><%= notice %></p>

<h1>Item Types</h1>

<table  class="table table-striped" style="width: auto;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @item_types.each do |item_type| %>
      <tr>
        <td><%= link_to item_type.name, item_path(item_type) %></td>
        <td><%= item_type.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_item_type_path(item_type) %></td>
          <%= link_to 'Destroy', item_type, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item Type', new_item_type_path %>
