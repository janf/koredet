<% if @user_accounts.count > 0 %>
<h3>Member of accounts</h3>
	<table  class="table table-striped", style="width: auto; height: auto">
	  	<thead>
		    <tr>
			    <th>Account</th>
			    <th>Member since</th>
			    <th></th>
			    
		    	</tr>
		</thead>

	  	<tbody>
			<% @user_accounts.each do |ua| %>
		      	<tr>
				  	<td> <%= ua.account.account_name %></td>
					<td> <%= ua.created_at %></td>
					<% if ua.account == current_user.current_account %>
						<td><b>Current</b></td>
					<% else %>
						<td>Change to</td>
					<% end %>
				</tr>
			<% end %>	
		 </tbody>
	</table>
<% end %>