<% if @user_accounts.count > 0 %>
<h3>Member of accounts</h3>
	<table  class="table table-striped", style="width: auto; height: auto">
	  	<thead>
		    <tr>
			    <th>Account</th>
			    <th>Member since</th>
			    <th></th>
			    
		    	</tr>
		</thead>

	  	<tbody>
			<% @user_accounts.each do |ua| %>
		      	<tr>
		      		<% if ua.account == current_user.current_account %>
						<td><b> <%= ua.account.account_name %></b></td>
						<td><b> <%= ua.created_at %></b></td>
						<td><b>Current</b></td>
						</b>
					<% else %>
		      			<td> <%= ua.account.account_name %></td>
						<td> <%= ua.created_at %></td>
						<td><%=link_to "Change to", change_current_account_user_profiles_path(account_id: ua.account_id), method: :put %></td>
					<% end %>
				</tr>
			<% end %>	
		 </tbody>
	</table>
<% end %>